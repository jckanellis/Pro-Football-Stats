<%= render "layouts/navbar" %>
<%= render "layouts/playernavbar" %>

<div class="datagrid" id="DT-div" style="display:none;">
  <table id="stat-table" class="table table-striped table-bordered dt-responsive nowrap display compact">
    <thead>
      <tr>
        <th>Season</th>
        <th>Player Name</th>
        <th>Team</th>
        <th>Age</th>
        <th>Games Played</th>
        <th>Games Started</th>
        <th>Completions</th>
        <th>Attempts</th>
        <th>Yards</th>
        <th>Touchdowns</th>
        <th>Interceptions</th>
      </tr>
    </thead>
    <tbody>
      <% @playerpassing.each do |passing| %>
        <tr>
          <td><%= passing.season %></td>
          <td><%= passing.player_name %></td>
          <td><%= passing.team %></td>
          <td><%= passing.age %></td>
          <td><%= passing.games_played %></td>
          <td><%= passing.games_started %></td>
          <td><%= passing.completions %></td>
          <td><%= passing.attempts %></td>
          <td><%= passing.yards %></td>
          <td><%= passing.touchdowns %></td>
          <td><%= passing.interceptions %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <div class="notes">
        * Pro Bowl season <br>
        + All Pro season
      </div>
    </tfoot>
  </table>
  <div class="footer">
    <a href="https://www.pro-football-reference.com/">Stats provided by Pro Football Reference</a>
  </div>
</div>
